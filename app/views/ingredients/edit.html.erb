<%= stylesheet_link_tag "edit_ingredient" %>

<div class="container">
<h1>Edit Ingredient</h1>

<%= form_with(model: [@recipe, @ingredient], url: user_recipe_ingredient_path(@recipe.user, @recipe, @ingredient), method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :food_name %>
    <%= form.text_field :food_name %>
  </div>

  <div>
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div>
    <%= form.label :value_in_dollars %>
    <%= form.text_field :value_in_dollars %>
  </div>

  <%= form.submit "Update Ingredient" %>
<% end %>

<%= link_to 'Back', user_recipe_path(@recipe.user, @recipe) %>
</div>
