<h1>Foods</h1>

<%= link_to 'Add Food', new_user_food_path(@user) %>

<div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Measurement Unit</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @food.each do |food| %>
      <tr>
        <td><%= food.name %></td> 
        <td><%= food.measurement_unit %></td> 
        <td><%= food.price %></td> 
        <td><%= food.quantity %></td>
        <td><%= button_to 'Delete', user_food_path(@user, food), method: :delete %></td> 
      </tr>  
      <% end %>
    </tbody>
  </table>
</div>
