<%= stylesheet_link_tag "food" %>
<%= stylesheet_link_tag "recipes" %>

<div class="container">
  <h1>Foods</h1>
  <div><%= link_to 'Add Food', new_user_food_path(@user), class: 'add-food' %></div>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Measurement Unit</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @food.each do |food| %>
      <tr>
        <td><%= food.name %></td> 
        <td><%= food.measurement_unit %></td> 
        <td>$<%= food.price %></td> 
        <td><%= button_to 'Delete', user_food_path(@user, food), method: :delete, class: 'button_remove' %></td> 
      </tr>  
      <% end %>
    </tbody>
  </table>
</div>



