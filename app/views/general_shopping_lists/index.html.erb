<h1>Shopping List</h1>

<p>Amount of Food items to buy: <%= @missing_foods.length %> </p>
<p>Total value of Food needed: <%= number_to_currency(@total_price) %> </p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @missing_foods.each do |food_name, missing_quantity| %>
      <tr>
        <td><%= food_name %></td>
        <td><%= missing_quantity %> </td>
        <td><%= calculate_price(food_name, missing_quantity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
